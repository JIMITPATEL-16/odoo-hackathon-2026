<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_tree_editable_inherit" model="ir.ui.view">
        <field name="name">stock.quant.tree.editable.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="days_since_last_move" />
                <field name="stock_status" 
                       decoration-danger="stock_status == 'dead'" 
                       decoration-warning="stock_status == 'slow'" 
                       decoration-success="stock_status == 'fast'" 
                       widget="badge"/>
            </xpath>
            
        </field>
    </record>
</odoo>